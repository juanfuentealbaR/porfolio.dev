---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer
  class="opacity-80 m-4 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto flex md:items-center py-4 justify-center md:justify-end"
  >
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
    >
      <li>
        <a
          href={translatePath("/#sobre-mi")}
          class="hover:underline me-4 md:me-6">{t("nav.about")}</a
        >
      </li>
      <li>
        <a
          id="contacto"
          href="mailto:j.fuentealba.ross@gmail.com"
          class="hover:underline">{t("nav.contact")}</a
        >
      </li>
    </ul>
  </div>
</footer>
